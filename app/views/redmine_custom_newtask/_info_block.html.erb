<% if defined?(info_text) && info_text.present? %>
<div id="custom-newtask-info" class="box" style="margin-bottom: 20px; padding: 15px; background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 4px;">
  <h3 style="margin-top: 0;"><%= raw important_info %></h3>
  
  <div class="custom-content">
    <%= raw info_text %>
  </div>
</div>

<style>
  #custom-newtask-info h3 {
    color: #c00;
    border-bottom: 1px solid #eee;
    padding-bottom: 8px;
  }
  .custom-content p {
    margin: 8px 0;
    line-height: 1.4;
  }
</style>
<% end %>
